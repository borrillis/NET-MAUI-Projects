<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SticksAndStones.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SticksAndStones.Views"
    FlyoutBehavior="Disabled"
    Title="Sticks and Stones">

    <ShellItem Route="Connect">
        <ShellContent ContentTemplate="{DataTemplate views:ConnectView}" />
    </ShellItem>

    <TabBar Title="Home">
        <Tab Title="Lobby" Route="Lobby">
            <ShellContent 
                Title="Lobby"
                ContentTemplate="{DataTemplate views:LobbyView}" />
        </Tab>
    </TabBar>
</Shell>

